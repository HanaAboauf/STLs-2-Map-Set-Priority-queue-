#include <iostream>
#include <bits/stdc++.h>
#define ll long long
using namespace std;

int main(){
    ios::sync_with_stdio(false),cin.tie(nullptr),cout.tie(nullptr);
ll n,m,x;

    while (cin>>n>>m) {
        map<ll,ll>map;
        ll cnt=0,test;
        if (n==0 && m==0) break;
        for (ll i = 0; i < n; ++i) {
            cin >> x;
            map[x]++;
        }
        for (ll i = 0; i < m; ++i) {
            cin >> x;
            if (map.count(x) > 0) map[x]++;
        }
        for (auto it:map) {
            if (it.second>1) cnt++;
        }
       cout<<cnt<<"\n";
    }


    return 0;
}
